<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a15096.myapplication.com.example.a15096.myapplication.smartconfig.SmartConfigActivity">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5.0dip"
        android:layout_marginTop="10.0dip"
        android:orientation="vertical"
        android:touchscreenBlocksFocus="false">

        <TextView
            android:id="@+id/esptouch_current_ssid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:text="当前已连接WiFi"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!--<Spinner-->
        <!--android:id="@+id/esptouch_configure_wifi"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->

    <TextView
        android:id="@+id/esptouch_ssid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:inputType="text" />

    <EditText
        android:id="@+id/esptouch_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:hint="@string/esp_esptouch_pwd_hint"
        android:inputType="textPassword" />
    <EditText
        android:id="@+id/deviceSetname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:inputType="textPersonName"
        android:hint="设备名称/例如:厨房/卧室..." />
    <!--<CheckBox-->
        <!--android:id="@+id/esptouch_isSsidHidden"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/esp_esptouch_isSsidHidden" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"

        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/esptouch_show_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/esp_esptouch_show_pwd" />

        <Space
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!--<Button-->
            <!--android:id="@+id/esptouch_delete_pwd"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/esp_esptouch_delete_pwd" />-->
    </LinearLayout>

    <Button
        android:id="@+id/esptouch_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:text="配置" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
